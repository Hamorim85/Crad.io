<% summary = summary || false %>
<% active  = active || false %>
<div class="inf-card">
  <label for='<%= influencer.id %>'>
    <div class="inf-header">
      <%= cl_image_tag influencer.photo.url(:thumbnail), class: 'avatar', alt: 'Img' %>
      <div class="inf-title">
        <%= influencer.name %>
        <% if influencer.verified %>
          <i class="fas fa-check-circle" title='Verified User'></i>
        <% end %>
        <div class="inf-info">
          <%= link_to influencer.instagram_path, target: '_blank' do %>
            <i class="fab fa-instagram"></i>
            <%= influencer.username %>
          <% end %>
        </div>
      </div>
      <%= link_to '', '#', id: influencer.id, type: "checkbox", name: "", value: "", class: "inf-selector #{active.present? ? 'active' : ''}" %>
    </div>
    <div class="inf-subheader">
      <ul class="inf-subheader-data">
        <li><strong><%= influencer.ig_followers %></strong> followers</li>
        <li><strong><%= influencer.ig_following %></strong> following</li>
      </ul>
    </div>
  </label>

